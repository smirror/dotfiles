[user]
	name = smirror
	email = your-email@example.com

[core]
	editor = vim
	autocrlf = input
	quotepath = false

[init]
	defaultBranch = main

[pull]
	rebase = false

[push]
	default = simple

[alias]
	st = status
	co = checkout
	br = branch
	ci = commit
	unstage = reset HEAD --
	last = log -1 HEAD
	visual = !gitk
	lg = log --oneline --graph --decorate --all
	hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short

[color]
	ui = auto

[diff]
	tool = vimdiff

[merge]
	tool = vimdiff